{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension (Desktop)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/*.js"
            ],
            "preLaunchTask": "npm: build",
            "runtimeExecutable": "${execPath}",
            "console": "integratedTerminal"
        }
    ]
}
